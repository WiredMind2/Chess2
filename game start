import pygame
import sys

pygame.init()

# Désigne la screen
screen = pygame.display.set_mode((685, 465))

# couleur
WHITE = (255, 255, 255)
BLACK = (0, 0, 0)
RED = (255, 0, 0)

background = pygame.image.load('assets/game start page.png')

# coordonnées pour les buttons
start_button_rect = pygame.Rect(281, 280, 150, 50)
red_choice_rect = pygame.Rect(600, 310, 20, 20)
black_choice_rect = pygame.Rect(600, 373, 20, 20)
white_choice_rect = pygame.Rect(600, 433, 20, 20)

game_started = False
settings = {'red': None, 'black': None, 'white': None}

def draw_screen():
    screen.fill(WHITE)
    screen.blit(background, (0, 0))
    
    # Start
    # pygame.draw.rect(screen, RED, start_button_rect)
    
    # Dessiner une boîte de sélection
    pygame.draw.rect(screen, BLACK, red_choice_rect, 2)
    pygame.draw.rect(screen, BLACK, black_choice_rect, 2)
    pygame.draw.rect(screen, BLACK, white_choice_rect, 2)
    
    # Afficher l'état de la case à cocher
    if settings['red'] == 'player':
        pygame.draw.circle(screen, BLACK, red_choice_rect.center, 10)
    elif settings['red'] == 'computer':
        pygame.draw.circle(screen, WHITE, red_choice_rect.center, 10)

    if settings['black'] == 'player':
        pygame.draw.circle(screen, BLACK, black_choice_rect.center, 10)
    elif settings['black'] == 'computer':
        pygame.draw.circle(screen, WHITE, black_choice_rect.center, 10)
    
    if settings['white'] == 'player':
        pygame.draw.circle(screen, BLACK, white_choice_rect.center, 10)
    elif settings['white'] == 'computer':
        pygame.draw.circle(screen, WHITE, white_choice_rect.center, 10)

    pygame.display.flip()

while True:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            sys.exit()
        
        if event.type == pygame.MOUSEBUTTONDOWN:
            if start_button_rect.collidepoint(event.pos):
                game_started = True
                print("Game started with settings:", settings)
            elif red_choice_rect.collidepoint(event.pos):
                if settings['red'] == 'player':
                    settings['red'] = 'computer'
                else:
                    settings['red'] = 'player'
            elif black_choice_rect.collidepoint(event.pos):
                if settings['black'] == 'player':
                    settings['black'] = 'computer'
                else:
                    settings['black'] = 'player'
            elif white_choice_rect.collidepoint(event.pos):
                if settings['white'] == 'player':
                    settings['white'] = 'computer'
                else:
                    settings['white'] = 'player'
    
    draw_screen()
